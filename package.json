{
	"name": "@fal-works/sagmal",
	"version": "0.2.0",
	"description": "CLI for text translation using DeepL API",
	"type": "module",
	"bin": {
		"sagmal": "./dist/bin.js"
	},
	"sideEffects": false,
	"files": [
		"dist/"
	],
	"scripts": {
		"setup": "deps-docs",
		"build": "tsdown",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "node --test src/**/*.test.ts",
		"test:integration": "node --test test/**/*.test.ts",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"check:types": "tsc --noEmit -p tsconfig.json",
		"check": "npm run check:types && npm run lint",
		"fix": "npm run check:types && npm run lint:fix",
		"prepublishOnly": "npm run check && npm test"
	},
	"keywords": [
		"translation"
	],
	"author": "FAL",
	"license": "Apache-2.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"deepl-node": "^1.19.0",
		"dotenv": "^17.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@fal-works/deps-docs": "^0.1.0",
		"@types/node": "^24.1.0",
		"tsdown": "^0.13.0",
		"typescript": "^5.8.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fal-works/sagmal.git"
	},
	"homepage": "https://github.com/fal-works/sagmal#readme"
}
